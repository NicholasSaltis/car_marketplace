<form class="d-flex mx-auto">
    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
    <button class="btn btn-outline-success" type="submit">Search</button>
</form>
<h1>Home#page</h1>
<div class="row">
    <%@listings.each do |car|%>
        <div class="col-md-4">
            <div class="card">
                <%if car.pictures && car.pictures.first%>
                    <%=image_tag car.pictures.first, class: "card-img-top"%>
                <%else%>
                    <%=image_tag "toy-car.jpg", class: "card-img-top"%>
                <%end%>
                <div class="card-body">
                    <p class="card-text">
                        <%=car.title%>
                    </p>
                    <p>$<%=car.price%></p>
                    <%=link_to 'Explore', listing_path(car.id), class: "btn btn-primary"%>
                </div>
            </div>
        </div>
    <%end%>
</div>

